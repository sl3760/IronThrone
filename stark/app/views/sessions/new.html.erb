<div class="center hero-unit">
	<div class="jumbotron">
		<h1>Sign in</h1>
		<div class="row">
			<div class="span6 offset3">
				<%= form_for(:session, url: sessions_path) do |f| %>
				<p>
					<%= f.label :email, :style=>"padding-left:20px;padding-top:20px"%>
					<%= f.text_field :email %>
				</p>
				<p>
					<%= f.label :password, :style=>"padding-left:20px;padding-top:20px"%>
					<%= f.password_field :password %>
				</p>
				<p style="padding-left:70px;padding-top:20px">
					<%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
				</p>
				<% end %>

				<p> New user? <%= link_to "Sign up now!", signup_path %></p>
			</div>
		</div>
	</div>
</div>